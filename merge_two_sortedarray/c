#include <stdio.h>

int main() {
    int n1, n2, i, j, k;

    // Get the size of the first array
    printf("Enter the size of the first array: ");
    scanf("%d", &n1);
    int arr1[n1];

    // Input elements for the first sorted array
    printf("Enter the elements of the first sorted array:\n");
    for (i = 0; i < n1; i++) {
        scanf("%d", &arr1[i]);
    }

    // Get the size of the second array
    printf("Enter the size of the second array: ");
    scanf("%d", &n2);
    int arr2[n2];

    // Input elements for the second sorted array
    printf("Enter the elements of the second sorted array:\n");
    for (i = 0; i < n2; i++) {
        scanf("%d", &arr2[i]);
    }

    // Array to store the merged result
    int merged[n1 + n2];
    
    i = j = k = 0; // Initialize indices

    // Merge the arrays
    while (i < n1 && j < n2) {
        if (arr1[i] < arr2[j]) {
            merged[k++] = arr1[i++];
        } else {
            merged[k++] = arr2[j++];
        }
    }

    // Copy any remaining elements from arr1
    while (i < n1) {
        merged[k++] = arr1[i++];
    }

    // Copy any remaining elements from arr2
    while (j < n2) {
        merged[k++] = arr2[j++];
    }

    // Print the merged array
    printf("Merged array: ");
    for (i = 0; i < n1 + n2; i++) {
        printf("%d ", merged[i]);
    }
    printf("\n");

    return 0;
}





